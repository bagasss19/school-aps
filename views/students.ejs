<!DOCTYPE html>
<html>
  <%- include ("./partials/header.ejs", {title : "Student List"}) %>
    <body>
        <table style="border: 1px;">
            <thead>
              <th>Id</th>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Email</th>
              <th>Gender</th>
              <th>Birth Date</th>
              <th>Action</th>
            </thead>
            <% data.forEach(x => { %>
            <tbody>
              <td><%= x.id %></td>
              <td><%= x.first_name %></td>
              <td><%= x.last_name %></td>
              <td><%= x.email %></td>
              <td><%= x.gender %></td>
              <td><%= x.birth_date %></td>
              <td><a href="/students/<%= x.id %>/edit">EDIT </a>|<a href="/students/<%= x.id %>/delete"> DELETE </a></td>
            </tbody>
            <% }) %>
          </table>
          <a href="/students/add"><button>Add Student</button></a>
    </body>
</html>